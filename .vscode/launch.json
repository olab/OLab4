    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "/var/www/vhosts/OLab4-api": "${workspaceRoot}/OLab4-api"
            },
            "log": true            
        },
        {
            "name": "Launch index.html",
            "type": "firefox",
            "request": "attach",
            "url": "http://localhost:4000",
            "webRoot": "${workspaceFolder}/OLab4-designer/build"            
        },  
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}